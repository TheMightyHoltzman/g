{% extends "::base.html.twig" %}

{% block title %}AppBundle:Post:edit{% endblock %}

{% block body %}
    <h1>Welcome to the Post:list page</h1>
    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Options</th>
            <th>id</th>
            <th>title</th>
            <th>picture</th>
            <th>created at</th>
            <th>published at</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                    <a href="{{ path('post_delete', {'id': post.id}) }}" style="color: indianred;">del</a>
                </td>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td><img class="img-thumbnail" width="100px" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="" /></td>
                <td>{{ post.createdAt|date("H:i d.m.Y") }}</td>
                <td>{{ post.deletedAt|date("H:i d.m.Y") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
